<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/CreateBlock1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"


                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SearchBlocks"
                app:layout_constraintWidth_percent="0.3333"
                app:srcCompat="?android:attr/listChoiceIndicatorMultiple" />

            <ImageView
                android:id="@+id/CreateBlock2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:layout_constraintStart_toEndOf="@+id/CreateBlock1"
                app:layout_constraintTop_toBottomOf="@+id/SearchBlocks"
                app:layout_constraintWidth_percent="0.3333"
                app:srcCompat="?android:attr/listChoiceIndicatorMultiple" />

            <ImageView
                android:id="@+id/CreateBlock3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:layout_constraintStart_toEndOf="@+id/CreateBlock2"
                app:layout_constraintTop_toBottomOf="@+id/SearchBlocks"
                app:layout_constraintWidth_percent="0.3333"
                app:srcCompat="?android:attr/listChoiceIndicatorMultiple" />

            <ImageView
                android:id="@+id/CreateBlock4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"


                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/CreateBlock1"
                app:layout_constraintWidth_percent="0.3333"
                app:srcCompat="?android:attr/listChoiceIndicatorMultiple" />

            <ImageView
                android:id="@+id/CreateBlock5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"

                app:layout_constraintStart_toEndOf="@+id/CreateBlock4"
                app:layout_constraintTop_toBottomOf="@+id/CreateBlock2"
                app:layout_constraintWidth_percent="0.3333"
                app:srcCompat="?android:attr/listChoiceIndicatorMultiple" />

            <ImageView
                android:id="@+id/CreateBlock6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"

                app:layout_constraintStart_toEndOf="@+id/CreateBlock5"
                app:layout_constraintTop_toBottomOf="@+id/CreateBlock3"
                app:layout_constraintWidth_percent="0.3333"
                app:srcCompat="?android:attr/listChoiceIndicatorMultiple" />

            <TextView
                android:id="@+id/NamePaletteTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="@string/name_palette"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/CreateBlock4" />

            <TextView
                android:id="@+id/PaletteBlocksTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="@string/palette_blocks_title"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NamePalette" />

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/PaletteBlocksTitle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/PaletteBlock1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:lines="1"
                        android:maxLines="1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/PaletteBlock2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:lines="1"
                        android:maxLines="1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/PaletteBlock3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:lines="1"
                        android:maxLines="1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/PaletteBlock4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:lines="1"
                        android:maxLines="1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/PaletteBlock5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:lines="1"
                        android:maxLines="1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/PaletteBlock6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:lines="1"
                        android:maxLines="1"
                        android:textSize="16sp" />
                </LinearLayout>
            </ScrollView>

            <Button
                android:id="@+id/PaletteCreate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/palette_create"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

            <Spinner
                android:id="@+id/SelectBlock"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#00FFFFFF"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/SearchBlocks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="@string/defaultSelected"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/NamePalette"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:hint="@string/hint"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NamePaletteTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>